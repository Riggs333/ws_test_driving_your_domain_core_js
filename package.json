{
  "name": "ws_test_driving_your_domain_core_js",
  "version": "1.0.0",
  "description": "Sources to get you started with javascript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/weltraumpirat/ws_test_driving_your_domain_core_js.git",
  "author": "tobias.goeschel <tobias.goeschel@codecentric.de>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "babel-node": "babel-node --extensions \".ts\",\".tsx\"",
    "build:src": "babel --config-file ./babel.config.js --extensions \".ts\",\".tsx\" ./src/**/* --out-dir src  --source-maps",
    "build:cucumber": "babel --config-file ./babel.config.js --extensions \".ts\",\".tsx\" acceptance --out-dir acceptance --source-maps",
    "build:publish": "tsc --build tsconfig_dist.json && babel --extensions \".ts\",\".tsx\" src --out-dir dist --source-maps --copy-files",
    "check-types": "tsc",
    "clean": "find dist -regex \".*/*\\.d\\.ts\" -delete && find src -regex \".*/*\\.js\" -delete &&  find src -regex \".*/*\\.js.map\" -delete && find acceptance/features -regex \".*/*\\.js\" -delete && find acceptance/features -regex \".*/*\\.js.map\" -delete",
    "lint": "eslint src/**/*.ts acceptance/features/step_definitions/**/*.ts acceptance/features/hooks/**/*.ts",
    "precommit": "yarn check-types && yarn lint && yarn test:coverage && yarn test:acceptance",
    "start": "nodemon --exec yarn babel-node -- src/index.ts --source-maps",
    "test:watch": "jest --watch",
    "test:acceptance": "yarn test:cucumber && yarn test:report",
    "test:cucumber": "yarn build:src && yarn build:cucumber && ./node_modules/.bin/cucumber-js acceptance/**/*.feature --logLevel=error --require-module ts-node/register --format-options \"{\\\"snippetInterface\\\": \\\"async-await\\\"}\" --format \"json:acceptance/reports/cucumber-report.json\" --format summary",
    "test:report": "node acceptance/reporters/cucumber-html-reporter.js",
    "test": "yarn test:unit && yarn test:acceptance",
    "test:coverage": "yarn test:unit --coverage",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/cucumber": "^4.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/uuid": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "cucumber": "^5.1.0",
    "cucumber-html-reporter": "^4.0.5",
    "eslint": "^5.16.0",
    "expect": "^24.7.1",
    "jest": "^24.7.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.1"
  },
  "dependencies": {
    "uuid": "^3.4.0"
  }
}
